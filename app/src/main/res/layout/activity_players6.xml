<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gogodr.edhlifecounter.ui.Players6Activity"
    android:orientation="horizontal"
    android:weightSum="3">
    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:layout_weight="1">
        <fragment
            android:id="@+id/player1"
            android:name="com.example.gogodr.edhlifecounter.lifecounter.components.counter.CounterFragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:layout="@layout/fragment_counter"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/player2"
            app:layout_constraintHorizontal_bias="0.5"
            />
        <fragment
            android:id="@+id/player2"
            android:name="com.example.gogodr.edhlifecounter.lifecounter.components.counter.CounterFragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:layout="@layout/fragment_counter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/player1"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:layout_weight="1">
        <fragment
            android:id="@+id/player3"
            android:name="com.example.gogodr.edhlifecounter.lifecounter.components.counter.CounterFragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:layout="@layout/fragment_counter"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/player4"
            app:layout_constraintHorizontal_bias="0.5"
            />
        <fragment
            android:id="@+id/player4"
            android:name="com.example.gogodr.edhlifecounter.lifecounter.components.counter.CounterFragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:layout="@layout/fragment_counter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/player3"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:layout_weight="1">
        <fragment
            android:id="@+id/player5"
            android:name="com.example.gogodr.edhlifecounter.lifecounter.components.counter.CounterFragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:layout="@layout/fragment_counter"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/player6"
            app:layout_constraintHorizontal_bias="0.5"
            />
        <fragment
            android:id="@+id/player6"
            android:name="com.example.gogodr.edhlifecounter.lifecounter.components.counter.CounterFragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:layout="@layout/fragment_counter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/player5"/>
    </android.support.constraint.ConstraintLayout>


</LinearLayout>
